package recursividadsuma;


public class RecursividadSuma {

    public static void main(String[] args) {
        
        System.out.println(sumaRecursiva(6));
        
        
    }

    private static int sumaRecursiva(int i) {
        if(i>0){
            i = i + sumaRecursiva(i-1);
            return i;
        }
        
        
        return 1;
    }
    
}
